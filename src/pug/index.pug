block script
  script: :lsc
    ldc.register \main, <[ldcvmgr auth loader notify]>, ({ldcvmgr, auth, loader, notify}) ->
      lc = {hero-id: 1}
      auth.get!
        .then (authinfo) ->
          lc.authinfo = authinfo
          ld$.fetch.{}headers['X-CSRF-Token'] = authinfo.csrfToken
          if authinfo.{}user.key => ld$.fetch '/d/me/condolence', {method: \GET}, {type: \json}
          else Promise.resolve([])
        .then ->
          data = if it => it.0 or null
          if data => data.publish = if data.publish => \1 else \0
          if data and !data.social => data.social = ''
          form = new ldForm do
            root: "[ld-scope=form]"
            submit: "[ld=submit]"
            values: data{content, social, contact, source, publish} if data
            verify: (name, value, element) ->
              if name == \social => return 1
              else return (if value => 0 else 2)
            afterCheck: (s, f) ->
              s.all = if (<[content source contact]>.reduce(((a, b) -> a and s[b] == 0), true)) => 0 else 2
              if s.file == 0 =>
                ldFile.fromFile f.file.files.0, \dataurl
                  .then -> ld$.find('[ld=img]', 0).setAttribute \src, it.result
          if data => form.checkAll!
          view = new ldView do
            root: "[ld-scope=form]"
            action: click: submit: ({node}) ->
              if node.classList.contains \disabled => return
              payload = form.values!
              loader.on!
              fd = new FormData!
              for key in <[content source contact social publish]> => fd.append key, payload[key]
              f = form.fields.file.files.0
              console.log f, form.fields.file.files
              if f => fd.append \file, f
              debounce 1000
                .then -> ld$.fetch '/d/condolence', {method: \POST, body: fd}, {type: \json}
                .finally -> loader.off!
                .then -> notify.send \success, "您的弔唁已送出。"
                .catch -> notify.send \danger, "送出失敗，再試一次？"
