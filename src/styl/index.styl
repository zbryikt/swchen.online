@font-face
  font-family: 'ldi'
  font-weight: normal
  font-style: normal
  src: url('/assets/lib/ldui/fonts/ldi.ttf') format('truetype')
  font-display: swap


html,body
  width: 100%
  height: 100%

h1,h2,h3
  font-family: 'Noto Sans TC', serif!important

h4,h5,h6
  font-family: Roboto, 'Noto Sans TC', sans-serif!important;font-weight:500

.typeset
  h4,h5,h6 
    font-family: Roboto, 'Noto Sans TC', sans-serif!important;font-weight:500

body .typeset, body, p
  font-family: Roboto, 'Noto Sans TC', sans-serif!important

.btn[ld=submit].disabled i
  display: none

.btn[ld=submit] + .text-danger
  display: none

.btn[ld=submit].disabled + .text-danger
  display: block

.navbar-collapse.collapse.show, .navbar-collapse.collapsing
  background: #fff
  padding: 1em
  border-radius: .5em
  box-shadow: 0 2px 4xp rgba(0,0,0,.3)

.herotext
  padding-left: 1em!important
  padding-top: 1em!important
  padding-bottom: 1em!important
@media (max-width: 1024)
  .herotext
    background: rgba(255,255,255,.7)
    border-radius: .5em 0 0 .5em

@import 'authpanel.styl'
@import 'timeline.styl'
